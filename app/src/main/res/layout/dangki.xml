<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/backgroundki"

    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:text="ĐĂNG KÝ"
            android:textSize="50dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_nhapten" />

        <EditText

            android:id="@+id/edittexttk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="70dp"
            android:hint="Nhập tên:"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="130dp"
            android:src="@drawable/ic_pass"/>

        <EditText
            android:id="@+id/edittextmk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edittexttk"
            android:layout_marginStart="110dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="70dp"
            android:hint="Nhập mật khẩu:"
            android:textSize="20dp" />
    </RelativeLayout>


    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_marginRight="50dp"
            android:id="@+id/buttonhuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dki"
            android:textColor="@color/q404040"
            android:text="HỦY"
            android:textSize="23dp"
            />
        <Button
            android:id="@+id/buttondongy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dki"
            android:textColor="@color/q404040"
            android:text="ĐỒNG Ý"
            android:textSize="23dp"
            />
    </LinearLayout>




</LinearLayout>